<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: article %>
      <%= form_with(model: article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label" %> <br>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :category, class: "col-2 col-form-label" %> <br>
          <div class="col-10">
            <%= form.collection_select(:category_ids, Category.all, :id, :name, {prompt: "make your selection"}, {multiple: true, 
              size: 3, class: "custom-select rounded shadow"},) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg"%>
        </div>
      <% end %>
    </div>
    <%= link_to 'Back', articles_path %>
  </div>
</div>