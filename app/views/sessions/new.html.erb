<div id="page-content">
  <h1 class="text-center mt-4">log in</h1>

	<div class="container">
	  <div class="row justify-content-center">
	    <div class="col-10">	      
	      <%= form_with(scope: :session, url: login_path,  class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

	        <div class="form-group row">
	          <%= form.label :email, class: "col-2 col-form-label" %> <br>
	          <div class="col-10">
	            <%= form.email_field :email, class: "form-control", placeholder: "enter your email" %>
	          </div>
	        </div>

	        <div class="form-group row">
	          <%= form.label :password, class: "col-2 col-form-label" %> <br>
	          <div class="col-10">
	            <%= form.password_field :password, class: "form-control", placeholder: "enter your password" %>
	          </div>
	        </div>

	        <div class="form-group row justify-content-center">
	          <%= form.submit "Log in", class: "btn btn-outline-light btn-lg" %>
	        </div>
	      <% end %>
	    </div>
	    <%= link_to 'Back', articles_path %>
	  </div>
	</div>

</div>